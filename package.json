{
  "name": "playgrounds",
  "version": "0.1.0",
  "description": "Electron app to quickly spin up GitHub and Docker playgrounds",
  "main": "dist/main/index.cjs",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/john-m24/playground.git"
  },
  "keywords": [
    "electron",
    "desktop",
    "playground",
    "github",
    "docker",
    "development",
    "typescript",
    "react"
  ],
  "scripts": {
    "dev:main": "tsup src/main/index.ts --format=cjs --dts --out-dir dist/main --watch --sourcemap",
    "dev:preload": "tsup src/preload/index.ts --format=cjs --dts --out-dir dist/preload --watch --sourcemap",
    "dev:renderer": "vite",
    "dev": "cross-env ELECTRON_RENDERER_URL=http://localhost:5173 concurrently -k \"npm:dev:*\" \"wait-on tcp:5173 && electron .\"",
    "build:main": "tsup src/main/index.ts --format=cjs --dts --out-dir dist/main",
    "build:preload": "tsup src/preload/index.ts --format=cjs --dts --out-dir dist/preload",
    "build:renderer": "vite build",
    "build": "run-s build:*",
    "start": "electron ."
  },
  "dependencies": {
    "electron": "^31.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "tsup": "^8.1.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "wait-on": "^8.0.0"
  }
}

